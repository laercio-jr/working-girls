@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Deletar dados pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Deletar os dados removerá sua conta permanentemente, essa ação não poderá ser desfeita.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" class="form-control"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Deletar os dados e fechar a minha conta</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}