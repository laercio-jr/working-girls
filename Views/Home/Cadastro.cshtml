@{
    ViewData["Title"] = "Cadastrar";
}

<div class="container">
    <div class="row">
        <div class="col-lg-10 col-xl-9 mx-auto">
            <div class="card flex-row my-5 border-0 shadow rounded-3 overflow-hidden">
                <div class="card-img-left d-none d-md-flex">
                    <!-- Background image dentro do CSS! -->
                </div>
                <div class="card-body p-4 p-sm-5">
                    <h3 class="card-title text-center mb-5 fw-light fs-5">Registrar</h3>
                    <form>

                        <div class="form-group mb-3">
                            <label for="floatingInputUsername">Nome</label>
                            <input type="text" class="form-control" id="floatingInputUsername" placeholder="Nome" required autofocus>
                        </div>

                        <div class="form-group mb-3">
                            <label for="floatingInputEmail">Email</label>
                            <input type="email" class="form-control" id="floatingInputEmail" placeholder="name@example.com">
                        </div>

                        <hr>

                        <div class="form-group mb-3">
                            <label for="floatingPassword">Senha</label>
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Senha">
                        </div>

                        <div class="form-group mb-3">
                            <label for="floatingPasswordConfirm">Confirmar Senha</label>
                            <input type="password" class="form-control" id="floatingPasswordConfirm" placeholder="Confirmar Senha">
                        </div>

                        <div class="d-grid mb-2">
                            <button class="btn btn-lg btn-primary btn-login btn-block fw-bold text-uppercase" type="submit">Registrar</button>
                        </div>

                        <a class="d-block text-center mt-2 small" asp-controller="Home" asp-action="Index">Tem uma conta? <b>Faça Login.</b></a>

                        <hr class="my-4">

                        <div class="d-grid mb-2">
                            <button class="btn btn-lg btn-google btn-block btn-login fw-bold text-uppercase" type="submit">
                                <i class="fab fa-google me-2"></i> Cadastro com Google
                            </button>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-lg btn-facebook btn-block btn-login fw-bold text-uppercase" type="submit">
                                <i class="fab fa-facebook-f me-2"></i> Cadastro com Facebook
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
